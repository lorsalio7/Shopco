      .cart__info
        form(action="#" method="POST").cart-info-form
          h2.cart-info-form__title Order Summary
          dl.order-info
            .order-info__row
              dt.order-info__subject Subtotal
              dd.order-info__amount $565
            .order-info__row
              dt.order-info__subject Discount
                span.order-info__discount-size (-20%)
              dd.order-info__amount.order-info__amount--discount-amount -$113
