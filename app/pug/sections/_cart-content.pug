section.cart
  .container
    h1.cart__title.section-title Your cart
    .cart__content
      .cart__products
        form(action="#" method="POST").cart-products-form
          .cart-products-form__list
            .cart-products-form__item.cart-products-item
              img(src="/img/cart-product-1.jpg" width="124" height="124", alt="Gradient Graphic T-shirt").cart-products-item__image
              .cart-products-item__text-content
                .cart-products-item__row
                  h2.cart-products-item__title
                    a(href="#").cart-products-item__link Gradient Graphic T-shirt
                  button(type="button" aria-label="Remove product from cart").cart-products-item__delete-button
                    +svg("", "delete-ic", 24, 24)
                .cart-products-item__row
                  dl.cart-products-item__list
                    div.cart-products-item__specification-row
                      dt Size:
                      dd Large
                    div.cart-products-item__specification-row
                      dt Color:
                      dd White
                .cart-products-item__row
                  p.prices
                    span.prices__current-price $145
                  .quantity
                    button(type="button" aria-label="Decrease quantity").quantity__button.quantity__button--minus
                      +svg("", "minus-ic", 24, 24)
                    button(type="button" aria-label="Increase quantity").quantity__button.quantity__button--plus
                      +svg("", "plus-ic", 24, 24)
                    label(for="quantity-input__4448754").visually-hidden Quantity product
                    input(type="text" name="quantity" id="quantity-input__4448754" pattern="[0-9]*" value="1").quantity__input
